{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"lib": [
			"es2019",
			"es2020"
		],
		"outDir": "dist",
		"removeComments": false,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts"
	]
}
